<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_huanjing"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/image3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_huanjing"
        android:layout_width="match_parent"
        app:titleTextColor="@color/white"
        app:title="返回"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_wendu"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="408dp"
        android:text="温度"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_shidu"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="408dp"
        android:text="湿度"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_guangzhao"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="280dp"
        android:text="光照"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_co2"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="280dp"
        android:text="气体质量"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_shengxiang"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="148dp"
        android:text="声响"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_fengli"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="148dp"
        android:text="风力"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_qita1"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:text="其他1"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_qita2"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:text="其他2"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>